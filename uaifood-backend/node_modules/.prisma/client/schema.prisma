// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Ou "mysql", "sqlite", etc.
  url      = env("DATABASE_URL")
}

// Enumerações do seu modelo
enum UserType {
  CLIENT
  ADMIN
}

enum PaymentMethod {
  CASH
  DEBIT
  CREDIT
  PIX
}

// Modelos baseados na sua imagem
model User {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String   @unique
  password  String
  userType  UserType @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  addresses Address[] // Um usuário pode ter N endereços
  orders    Order[]   @relation("ClientOrders") // Pedidos feitos pelo cliente
  created   Order[]   @relation("AdminOrders") // Pedidos criados pelo admin/usuário
}

model Address {
  id        Int      @id @default(autoincrement())
  street    String
  number    String
  district  String
  city      String
  state     String
  zipCode   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int // Chave estrangeira para User
}

model Category {
  id          Int      @id @default(autoincrement())
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items Item[] // Uma categoria tem N itens
}

model Item {
  id          Int      @id @default(autoincrement())
  description String
  unitPrice   Float // "double" no seu diagrama é "Float" no Prisma
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int // Chave estrangeira para Category

  orderItems OrderItem[] // Um item pode estar em N pedidos
}

model Order {
  id            Int           @id @default(autoincrement())
  paymentMethod PaymentMethod
  status        String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  client   User @relation("ClientOrders", fields: [clientId], references: [id])
  clientId Int // Chave estrangeira para o Cliente

  createdBy   User @relation("AdminOrders", fields: [createdById], references: [id])
  createdById Int // Chave estrangeira para quem criou (ex: Admin)

  items OrderItem[] // Um pedido tem N itens
}

model OrderItem {
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order   Order @relation(fields: [orderId], references: [id])
  orderId Int // Chave estrangeira para Order

  item   Item @relation(fields: [itemId], references: [id])
  itemId Int // Chave estrangeira para Item

  @@id([orderId, itemId]) // Chave primária composta
}
